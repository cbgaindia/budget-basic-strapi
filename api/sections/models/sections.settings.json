{
  "kind": "collectionType",
  "collectionName": "sections",
  "info": {
    "name": "Sections"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Content": {
      "type": "richtext"
    },
    "formattedContent": {
      "type": "text"
    },
    "chapter": {
      "via": "articles",
      "model": "chapters"
    },
    "slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "Section_No": {
      "type": "decimal",
      "min": 1,
      "required": true
    }
  }
}
